{
  "name": "simply-do-mern",
  "version": "0.1.0",
  "description": "Todo List Web Application with MERN stack",
  "main": "server.js",
  "scripts": {
    "client": "yarn --cwd client start",
    "client-build": "yarn --cwd client build",
    "client-install": "yarn --cwd client install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "npm install --prefix client && npm build --prefix client",
    "server": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nickwu241/simply-do-mern.git"
  },
  "author": "Nick Wu <nickwu241@gmail.com>",
