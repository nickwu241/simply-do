  "bugs": {
    "url": "https://github.com/nickwu241/simply-do-mern/issues"
  },
  "homepage": "https://github.com/nickwu241/simply-do-mern#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "mongoose": "^5.1.7",
    "morgan": "^1.9.0",
    "serve-static": "^1.13.2"
  },
  "devDependencies": {
    "dotenv": "^6.0.0",
    "concurrently": "^3.6.0",
    "nodemon": "^1.17.5"
  }
}
